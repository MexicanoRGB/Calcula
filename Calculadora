programa {

  inclua biblioteca Matematica --> mat

  funcao inicio() {

   real numero1 = 0
   real numero2 = 0

   escreva("Sistema de somas\n")
   escreva("Digite um numero: ")
   leia(numero1)
   escreva("Digite outro numero: ")
   leia(numero2)
    real soma = numero1+numero2
    real subtracao = numero1-numero2
    real multiplicacao = numero1*numero2
    real divisao = mat.arredondar(numero1/numero2,2)

    caracter opcao
    escreva("\nVocê quer o resultado da soma? S ou N ")
    leia(opcao)
    se (opcao == "S"){escreva("\no resultado da soma é "+soma )}
    
    escreva("\nVocê quer o resultado da diminuição? S ou N ")
    leia(opcao)
    se (opcao == "S"){escreva("\no resultado da diminuição é "+subtracao)}
    
    escreva("\nVocê quer o resultado da multiplicaçao? S ou N ")
    leia(opcao)
    se (opcao == "S"){escreva("\no resultado da multiplicaçao é "+multiplicacao)}

    escreva("\nVocê quer o resultado da divisão? S ou N ")
    leia(opcao)
    se (opcao == "S"){escreva("\no resultado da divisão é "+divisao)}
    
  }
}
